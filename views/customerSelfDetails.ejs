    <!--Details-->
<div class="c_self">
<div class="c_self_overlay">
    <div class="container">
        <h1 class="text-center text-white p-4 cont">Fill In The Details</h1>
            <div class="row">
                <div class="col">
                    <div class="" style="width:50%;margin:25px auto">
                        <form class="" action="/customerSelfDetails" method="POST">
                            <div class="card p-4">
                                <div class="form-inline ">
                                    <input type="text" style="width:45%;" name="fname" value="" class="form-control mr-auto" placeholder="First Name">
                                    <input type="text" style="width:45%;" name="lname" value="" class="form-control " placeholder="Last Name">
                                </div>
                                <div class="mt-3">
                                    <input type="radio" name="gender" value="Male" class="mr-2">Male
                                    <input type="radio" name="gender" value="Female" class="ml-5 mr-2">Female
                                </div>  
                                <div class="form-inline mt-3">
                                    <input type="number" style="width:45%;" name="age" value="" class="form-control mr-auto" placeholder="Age (In Years)">
                                    <input type="number" style="width:45%;" name="contact" value="" class="form-control" placeholder="Contact No.">
                                </div>  
                                <div class="form-group mt-3">
                                    <input type="text" name="locality" value="" class="form-control mr-auto" placeholder="Locality">
                                </div>                                       
                                <div class="form-inline mt-3">
                                    <input type="text" name="city" style="width:45%;" value="" class="form-control mr-auto" placeholder="City">
                                    <input type="text" name="state" style="width:45%;" value="" class="form-control" placeholder="State">              
                                </div>
                                <div class="form-group mt-3">
                                    
                                    <input type="number" name="zip" value="" class="form-control" placeholder="Zip Code"> 
                                </div>
                                <div class="justify-content-around mt-3">
                                    <button type="reset" class="btn btn-success ml-5" style="width:35%;">Reset</button>
                                    <button type="submit" class="btn btn-danger ml-5" style="width:35%;">Submit</button> 
                                </div>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>       
</div>
